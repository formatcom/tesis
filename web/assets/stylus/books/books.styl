.books_container
	.container_title
		padding 45px 0px
		font-size 1.7em
		color #084B8A
		strong
			border-bottom 6px solid #B18904
	.container_search
		height 40px
		border 1px solid  #2E2E2E
		background #FFFFFF
		margin-bottom 40px
		.search_box
			height 39px
			border-right 1px solid  #2E2E2E 
			input
				width 100%
				height 39px
				border none
				appearance none
				-moz-appearance none
				-webkit-appearance none
				background none
				font-size 1.2em
				padding-left 15px
		.search_boton
			width 100%
			height 40px
			padding 0
			&:hover
				color #2E2E2E
			.icono
				color #2E2E2E 
				font-size 1.5em
	
	.container_nombre
		padding-bottom 20px
		border-bottom 1px solid #A4A4A4
		span
			color #2E2E2E
			font-size 1.7em
		.icono
			color #B18904
			font-size 2em

	.container_bookslist
		padding 15px 0px
		margin 10px
		.bookslist_items
			width 125px
			margin 10px
			word-wrap break-word
			figure
				overflow hidden
				width 123px
				height 180px
				margin 0
				padding 0
				img 
					width 100%
					height 100%
			.items_name
				padding 5px 0px
				color #204B9B
				font-size 0.9em
			.items_subname
				color rgba(0,0,0,.2)
				font-size 0.8em